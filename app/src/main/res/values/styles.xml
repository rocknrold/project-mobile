<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="loginInputs" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#F4F0D9</item>
        <item name="boxStrokeColor">#008037</item>
        <item name="boxCornerRadiusTopStart">25sp</item>
        <item name="boxCornerRadiusBottomStart">25sp</item>
        <item name="boxCornerRadiusTopEnd">25sp</item>
        <item name="boxCornerRadiusBottomEnd">25sp</item>
        <item name="android:padding">10sp</item>
    </style>

    <style name="loginButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="borderWidth">1px</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1px</item>
        <item name="android:buttonCornerRadius">500px</item>
        <item name="cornerRadius">25sp</item>
        <item name="backgroundTint">#F4F0D9</item>
        <item name="rippleColor">#008037</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar" parent="Theme.MovieBytes">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>